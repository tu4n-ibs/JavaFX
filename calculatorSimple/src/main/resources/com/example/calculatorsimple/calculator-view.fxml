<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.calculatorsimple.calculatorController">
  <HBox alignment="CENTER">
    <Label text="number1: "/>
    <TextField alignment="CENTER" fx:id="number1"/>
  </HBox>
  <HBox alignment="CENTER">
    <Label text="number2"/>
    <TextField alignment="CENTER" fx:id="number2"/>
  </HBox>
  <HBox alignment="CENTER">
    <Button text="+" alignment="CENTER" onAction="#onCongButtonClick"/>
    <Button text="-" alignment="CENTER" onAction="#onTruButtonClick"/>
    <Button text="*" alignment="CENTER" onAction="#onNhanButtonClick"/>
    <Button text="/" alignment="CENTER" onAction="#onChiaButtonClick"/>
  </HBox>
</VBox>
